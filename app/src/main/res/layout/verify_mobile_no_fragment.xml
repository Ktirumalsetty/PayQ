<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.signup.EnterMobileFragment">

    <TextView
        android:id="@+id/tv_enter_no_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="138dp"
        android:fontFamily="@font/open_sans_bold"
        android:textColor="@color/app_black"
        android:text="@string/verify_mobile_no_title"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We sent it to the number +91 XXXXXXX707"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_enter_no_label"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et1"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        tools:text="9"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et2"
        android:layout_marginTop="60dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/otp_edittext_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_desc"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:fontFamily="@font/open_sans_bold"
        android:drawablePadding="5dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et2"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        tools:text="9"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintStart_toEndOf="@+id/et1"
        app:layout_constraintEnd_toStartOf="@+id/et3"
        android:layout_marginTop="60dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/otp_edittext_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_desc"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:fontFamily="@font/open_sans_bold"
        android:drawablePadding="5dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et3"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        tools:text="9"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintStart_toEndOf="@+id/et2"
        app:layout_constraintEnd_toStartOf="@+id/et4"
        android:layout_marginTop="60dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/otp_edittext_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_desc"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:fontFamily="@font/open_sans_bold"
        android:drawablePadding="5dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et4"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="1"
        tools:text="9"
        android:padding="16dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et3"
        android:layout_marginTop="60dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/otp_edittext_bg"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_desc"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:fontFamily="@font/open_sans_bold"
        android:drawablePadding="5dp" />

    <TextView
        android:id="@+id/tv_resend_code_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend code in 00:58"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et1"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="@string/verify_mobile"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et1"
        />

</androidx.constraintlayout.widget.ConstraintLayout>